<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:padding="8dp">
<RelativeLayout
    android:id="@+id/rl_topbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_author_avatar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_test_girl6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:text="henry"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_author_avatar" />
    <TextView
        android:id="@+id/tv_author_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综艺大眼睛综艺大眼睛综艺大眼睛综艺大眼睛综艺大眼睛"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_category"
        android:layout_alignBottom="@+id/iv_author_avatar"
        android:layout_toRightOf="@+id/iv_author_avatar" />
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_color"
        android:layout_alignParentRight="true"
        android:text="综艺" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <me.henry.versatile.view.video.XueErVideoView
        android:id="@+id/xueer_videoview"
        android:layout_width="match_parent"
        android:background="@drawable/shape_video"
        android:layout_height="wrap_content">
    </me.henry.versatile.view.video.XueErVideoView>
    <RelativeLayout
        android:id="@+id/rl_video_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<ImageView-->
        <!--android:id="@+id/iv_cover"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
     <!--/>-->
</RelativeLayout>
<TextView
    android:id="@+id/tv_video_title"
    android:layout_width="wrap_content"
    android:text="Oasis-mitis"
    android:layout_marginTop="5dp"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_video_des"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:text="will you take me there"
        android:layout_height="wrap_content" />

</LinearLayout>